    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Linux Config",
            "type": "shell",
            "command": "make",
            "args": [
                "--directory=${userHome}/sourceforge/trdp",
                "LINUX_config"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
